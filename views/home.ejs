<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
  integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

  <title>Best Playlist</title>
</head>

<body class="background">

  <%-include("./partialNav")%>
  <!-- section 1  -->
  <div class="container title">
    <p style="font-size: 50px;">EVERY DAY MUSIC</p>
  
  </div>
  <div class="container">
    <div class="row" style="margin-top: 80px;">

      <div class="col-4">
        <div class="card " style="width: 22rem">
          <img
            src="https://media.istockphoto.com/vectors/letter-o-with-music-logo-icon-design-vector-id1090924366?k=6&m=1090924366&s=170667a&w=0&h=PbvaUAqEg2CzuQsuKU-8lwtF6Pa703iGUm5dO1n-FXc="
            style="height:262px;" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">View List </h5>
            <p class="card-text">See all top list of this week , you can rate selected playlist</p>
            <a href="playlist" class="btn btn-light">View all</a>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card" style="width: 22rem;">
          <img src="https://www.designyourway.net/blog/wp-content/uploads/2018/12/fox_music_2-700x525.jpg"
            class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">My Playlist</h5>
            <p class="card-text">View all your playlist and you can edit your playlist </p>
            <% if (logIn) { %>
            <a href="/playlist/<%=logIn.id%>/myPlaylist" class="btn btn-light">Show My Playlist</a>
            <% } else { %>
              <button type="button" class="btn btn-light" data-toggle="modal" data-target="#myModal">Show My Playlist</button>
            <%  } %>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card" style="width: 22rem; ">
          <img src="https://i.pinimg.com/originals/fe/c1/18/fec1188fe9a1cec705c0c2489559f0fd.png" class="card-img-top"
            style="height: fit-content;" alt="...">
          <div class="card-body">
            <h5 class="card-title">Add New Playlist</h5>
            <p class="card-text">Create your own playlist and select many songs from our database</p>
            <% if (logIn) { %>
            <a href="/playlist/<%=logIn.id%>/addPlaylist" class="btn btn-light">Add New Playlist</a>
            <% } else { %>
              <button type="button" class="btn btn-light" data-toggle="modal" data-target="#myModal">Add New Playlist</button>
            <%  } %>
          </div>
        </div>
      </div>

    </div>
  </div>


  <!-- end section 1 -->

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script>
  function myFunction() {
  alert("You Are Logged Out");
    }

   
  </script>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
</body>

</html>